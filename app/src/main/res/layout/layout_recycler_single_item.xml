<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardMaxElevation="@dimen/cardview_default_elevation"
    app:cardPreventCornerOverlap="true">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_tv"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="fill_vertical|fill_horizontal|start"
        android:paddingEnd="@dimen/default_padding_medium"
        android:paddingLeft="@dimen/default_padding_medium"
        android:paddingRight="@dimen/default_padding_medium"
        android:paddingStart="@dimen/default_padding_medium" />

</android.support.v7.widget.CardView>
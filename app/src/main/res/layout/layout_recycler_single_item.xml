<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/border_login_padding"
    android:layout_marginStart="@dimen/border_login_padding"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardMaxElevation="@dimen/cardview_default_elevation"
    app:cardPreventCornerOverlap="true">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_tv"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="fill_vertical|fill_horizontal|start"
        android:paddingEnd="@dimen/default_padding_medium"
        android:paddingLeft="@dimen/default_padding_medium"
        android:paddingRight="@dimen/default_padding_medium"
        android:paddingStart="@dimen/default_padding_medium"
        app:theme="@style/TextAppearance.AppCompat.Body1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/cardview_shadow_start_color" />

</android.support.v7.widget.CardView>
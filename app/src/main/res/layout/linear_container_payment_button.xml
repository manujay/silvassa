<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_back_pay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="50dp"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:showIn="@layout/layout_fragment_result">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/et_back_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_margin="@dimen/et_margin"
        android:layout_weight="1"
        android:background="@drawable/drawable_background_back_button"
        android:gravity="center"
        android:shadowColor="#8A8A8A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/et_pay_buttom"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_margin="@dimen/et_margin"
        android:layout_weight="1"
        android:background="@drawable/drawable_background_login_button"
        android:gravity="center"
        android:shadowColor="#8A8A8A"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/pay_now"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>
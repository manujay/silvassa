<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mapmyindia.ceinfo.Silvassa.ui.activity.ActivitySyncSearch">

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:orientation="vertical"
            app:rowCount="4"
            app:useDefaultMargins="true">

            <TextView
                android:id="@+id/label_row0"
                android:text="@string/zone"
                app:layout_column="0"
                app:layout_gravity="start|fill_horizontal"
                app:layout_row="0" />

            <Spinner
                android:id="@+id/spinner_row0"
                android:background="@drawable/drawable_background_edittext"
                app:layout_column="1"
                app:layout_gravity="start|fill_horizontal"
                app:layout_row="0" />

            <TextView
                android:id="@+id/label_row1"
                android:text="@string/owner_name"
                app:layout_column="0"
                app:layout_gravity="start|fill_horizontal"
                app:layout_row="1" />

            <Spinner
                android:id="@+id/spinner_row1"
                android:background="@drawable/drawable_background_edittext"
                app:layout_column="1"
                app:layout_gravity="start|fill_horizontal"
                app:layout_row="1" />

            <TextView
                android:id="@+id/label_row2"
                android:text="@string/occupier_name"
                app:layout_column="0"
                app:layout_gravity="start|fill_horizontal"
                app:layout_row="2" />

            <Spinner
                android:id="@+id/spinner_row2"
                android:background="@drawable/drawable_background_edittext"
                app:layout_column="1"
                app:layout_gravity="start|fill_horizontal"
                app:layout_row="2" />

            <TextView
                android:id="@+id/label_row3"
                android:text="@string/property_id"
                app:layout_column="0"
                app:layout_gravity="start|fill_horizontal"
                app:layout_row="3" />

            <Spinner
                android:id="@+id/spinner_row3"
                android:background="@drawable/drawable_background_edittext"
                app:layout_column="1"
                app:layout_gravity="start|fill_horizontal"
                app:layout_row="3" />

        </android.support.v7.widget.GridLayout>

    </android.support.v7.widget.ContentFrameLayout>


    <LinearLayout
        android:id="@+id/container_sync_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/et_sync_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/et_margin"
            android:layout_weight="1"
            android:background="@drawable/drawable_background_login_button"
            android:gravity="center"
            android:text="@string/sync"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/et_search_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/et_margin"
            android:layout_weight="1"
            android:background="@drawable/drawable_background_login_button"
            android:gravity="center"
            android:text="@string/search"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
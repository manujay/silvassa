<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/color_toolbar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/list_item_results0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/add_remove_iv"
        android:layout_toStartOf="@+id/add_remove_iv"
        android:gravity="fill_horizontal|start"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/list_item_results1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_results0"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/add_remove_iv"
        android:layout_toStartOf="@+id/add_remove_iv"
        android:gravity="fill_horizontal|start"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/list_item_results2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_results1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/add_remove_iv"
        android:layout_toStartOf="@+id/add_remove_iv"
        android:gravity="fill_horizontal|start"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/list_item_results3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_results2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/add_remove_iv"
        android:layout_toStartOf="@+id/add_remove_iv"
        android:gravity="fill_horizontal|start"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_small" />

    <ImageView
        android:id="@+id/add_remove_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_add_circle_outline"
        tools:ignore="ContentDescription" />
</RelativeLayout>